@model IEnumerable<Product>


<div class="row pb-3">

	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border p-3 shadow border-top border rounded">
						<img src="@product.ImageUrl" class="card-img-top rounded"/>
						<div class="card-body pb-0">
							<div class="pl-1">
								<p title="@product.Title" class="card-title h5 text-dark text-opacity-75 text-uppercase text-center text-truncate"
								   style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
									@product.Title
								</p>								
								<p class="card-title text-body text-center">by @product.Author</p>
							</div>
							<div class="pl-1">
								<p class="h5 text-dark text-opacity-75 text-center mb-0">List price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
							</div>
							<div class="pl-1">
								<p class="h5 text-dark text-opacity-75 text-center">As low as: <span>@product.Price100.ToString("c")</span></p>
							</div>
							<div>
								<a asp-area="Customer" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control" >Details</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}	

</div>